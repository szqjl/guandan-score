/* 蓝方提示的动�?*/
.blue-toast {
  animation: fadeInOutBlue 1.5s ease-in-out;
}

@keyframes fadeInOutBlue {
  0% {
    opacity: 0;
    transform: translate(50%, -50%) scale(0.8) translateY(20rpx);
  }

  20% {
    opacity: 1;
    transform: translate(50%, -50%) scale(1) translateY(0);
  }

  80% {
    opacity: 1;
    transform: translate(50%, -50%) scale(1) translateY(0);
  }

  100% {
    opacity: 0;
    transform: translate(50%, -50%) scale(0.8) translateY(-30rpx);
  }
}

