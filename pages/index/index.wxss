/* 胜利动画弹窗 */
.victory-animation-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 胜利动画背景遮罩 */
.victory-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  animation: victoryFadeIn 0.5s ease-out;
}

/* 胜利动画内容 */
.victory-content {
  position: relative;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 50%, #FF6B35 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(255, 215, 0, 0.5);
  animation: victorySlideIn 0.8s ease-out;
  border: 4rpx solid #FFD700;
}

/* 胜利图标 */
.victory-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: victoryBounce 1s ease-in-out infinite;
}

/* 胜利标题 */
.victory-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  animation: victoryPulse 1.5s ease-in-out infinite;
}

/* 胜利消息 */
.victory-message {
  font-size: 32rpx;
  color: #FFFFFF;
  margin-bottom: 30rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 彩带容器 */
.victory-confetti {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
}

/* 彩带碎片 */
.confetti-piece {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #FFD700;
  animation: confettiFall 3s linear infinite;
}

.confetti-piece:nth-child(1) {
  left: 10%;
  animation-delay: 0s;
  background: #FF6B35;
}

.confetti-piece:nth-child(2) {
  left: 20%;
  animation-delay: 0.2s;
  background: #FFD700;
}

.confetti-piece:nth-child(3) {
  left: 30%;
  animation-delay: 0.4s;
  background: #FF6B35;
}

.confetti-piece:nth-child(4) {
  left: 40%;
  animation-delay: 0.6s;
  background: #FFD700;
}

.confetti-piece:nth-child(5) {
  left: 50%;
  animation-delay: 0.8s;
  background: #FF6B35;
}

.confetti-piece:nth-child(6) {
  left: 60%;
  animation-delay: 1s;
  background: #FFD700;
}

.confetti-piece:nth-child(7) {
  left: 70%;
  animation-delay: 1.2s;
  background: #FF6B35;
}

.confetti-piece:nth-child(8) {
  left: 80%;
  animation-delay: 1.4s;
  background: #FFD700;
}

.confetti-piece:nth-child(9) {
  left: 90%;
  animation-delay: 1.6s;
  background: #FF6B35;
}

.confetti-piece:nth-child(10) {
  left: 95%;
  animation-delay: 1.8s;
  background: #FFD700;
}

/* 胜利动画关键帧 */
@keyframes victoryFadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes victorySlideIn {
  from {
    opacity: 0;
    transform: translateY(-100rpx) scale(0.5);
  }

  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes victoryBounce {

  0%,
  20%,
  50%,
  80%,
  100% {
    transform: translateY(0);
  }

  40% {
    transform: translateY(-20rpx);
  }

  60% {
    transform: translateY(-10rpx);
  }
}

@keyframes victoryPulse {

  0%,
  100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.05);
  }
}

@keyframes confettiFall {
  0% {
    transform: translateY(-100rpx) rotate(0deg);
    opacity: 1;
  }

  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}