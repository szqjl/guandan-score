/* pages/launch/index.wxss */

/* 启动页主容器 - 与房间页保持一致的渐变背景 */
.launch-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* 渐变背景 */
  padding: 16rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 页面装饰元素 - 与房间页一致的浮动光点动画 */
.launch-page::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 1;
}

.launch-page::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.08) 0%, transparent 40%),
    radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.06) 0%, transparent 40%);
  pointer-events: none;
  z-index: 1;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
  }
}

/* 品牌标识区域 */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 45rpx 20rpx 40rpx 20rpx;
  z-index: 10;
  position: relative;
}

/* Logo和标题的水平布局 */
.brand-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 5rpx;
  margin-top: -15rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.main-logo {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* GD字母白色样式 */
.gd-text {
  color: #FFFFFF; /* 白色 */
  font-weight: 600;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

/* 其他文字保持原样 */
.other-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 功能选择区域 */
.function-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  z-index: 10;
  position: relative;
  min-height: 400rpx;
}

.function-title {
  margin-bottom: 60rpx;
}

.title-text {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 功能按钮容器 - 水平排列 */
.buttons-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: stretch; /* 确保所有子元素高度一致 */
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  z-index: 20;
  margin: 0 16rpx;
  margin-bottom: 20rpx;
}

/* 导航按钮容器 - 垂直排列，左侧居中 */
.nav-buttons-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  position: fixed;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
  align-items: center;
}

/* 功能按钮基础样式 - 缩小版本，水平排列 */
.function-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 18rpx 12rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 20;
  height: 160rpx;
  width: 150rpx;
  align-self: stretch; /* 确保所有按钮高度一致 */
}

.function-btn::after {
  border: none;
}

/* 按钮图标 - 缩小版本 */
.btn-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

/* 按钮内容 - 垂直排列 */
.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.btn-title {
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 1.2;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.btn-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14rpx;
  font-weight: 400;
  line-height: 1.2;
  text-align: center;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 创建房间按钮 - 绿色主题 */
.create-room-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
}

.create-room-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.6);
}

/* 加入房间按钮 - 蓝色主题 */
.join-room-btn {
  background: linear-gradient(135deg, #2196F3 0%, #42A5F5 100%);
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.4);
}

.join-room-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.6);
}

/* 导航按钮基础样式 */
.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 6rpx 4rpx;
  border-radius: 8rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 20;
  width: 40rpx;
  height: 40rpx;
}

.nav-btn::after {
  border: none;
}

/* 导航按钮图标 */
.nav-icon {
  font-size: 16rpx;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

/* 导航按钮文字 */
.nav-text {
  color: #FFFFFF;
  font-size: 10rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 1.2;
}

/* 历史记录按钮 - 蓝色主题 */
.history-btn {
  background: linear-gradient(135deg, #2196F3 0%, #42A5F5 100%);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.4);
}

.history-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.6);
}

/* 文档说明按钮 - 绿色主题 */
.help-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
}

.help-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.6);
}

/* 反馈按钮 - 橙色主题 */
.feedback-btn {
  background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.4);
}

.feedback-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.6);
}

/* 设置按钮 - 紫色主题 */
.settings-btn {
  background: linear-gradient(135deg, #9C27B0 0%, #BA68C8 100%);
  box-shadow: 0 4rpx 12rpx rgba(156, 39, 176, 0.4);
}

.settings-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(156, 39, 176, 0.6);
}

/* 快速启动按钮 - 橙色主题 */
.quick-start-btn {
  background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 152, 0, 0.4);
}

.quick-start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.6);
}

/* 底部说明区域 */
.footer-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  z-index: 10;
  position: relative;
}

.footer-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .brand-text {
    font-size: 24rpx;
  }
  
  .title-text {
    font-size: 32rpx;
  }
  
  .btn-title {
    font-size: 28rpx;
  }
  
  .btn-desc {
    font-size: 18rpx;
  }
  
  .btn-icon {
    font-size: 40rpx;
    width: 50rpx;
    height: 50rpx;
  }
}
