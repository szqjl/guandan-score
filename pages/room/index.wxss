}

/* 把数选择弹窗样式 */
.rounds-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rounds-picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  backdrop-filter: none;
}

.rounds-picker-content {
  position: relative;
  background-color: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.1), 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  animation: roundsPickerSlideIn 0.3s ease-out;
  z-index: 10000;
  border: 2rpx solid #e0e0e0;
}

@keyframes roundsPickerSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.rounds-picker-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx 12rpx;
  background-color: #1e40af;
  border-radius: 16rpx 16rpx 0 0;
}

.rounds-picker-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.rounds-picker-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx 12rpx;
  padding: 12rpx 16rpx;
  background-color: #e9ecef;
}

.rounds-picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30rpx;
  width: 60rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 4rpx;
  font-size: 16rpx;
  font-weight: 500;
  color: #495057;
  cursor: pointer;
  transition: all 0.2s ease;
  user-select: none;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.rounds-picker-item:active {
  transform: scale(0.95);
}

.rounds-picker-item.selected {
  background-color: #007bff;
  color: #fff;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 4rpx 12rpx rgba(0, 123, 255, 0.3);
  border-color: #0056b3;
}

.rounds-picker-item:hover {
  background-color: #e9ecef;
}

.rounds-picker-item.selected:hover {
  background-color: #0056b3;
}

.rounds-picker-footer {
  display: flex;
  gap: 12rpx;
  padding: 12rpx 24rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
  border-radius: 0 0 16rpx 16rpx;
}

.rounds-picker-confirm,
.rounds-picker-cancel {
  flex: 1;
  height: 56rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  border: 1rpx solid #dee2e6;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.rounds-picker-confirm {
  background-color: #007bff;
  color: #fff;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 4rpx 12rpx rgba(0, 123, 255, 0.3);
  border-color: #0056b3;
}

.rounds-picker-confirm:active {
  background-color: #0056b3;
  transform: scale(0.98);
}

.rounds-picker-cancel {
  background-color: #6c757d;
  color: #fff;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.2), 0 4rpx 12rpx rgba(108, 117, 125, 0.3);
  border-color: #545b62;
}

.rounds-picker-cancel:active {
  background-color: #545b62;
  transform: scale(0.98);
}

/* 房间页面主容器 - 与启动页保持一致的渐变背景 */
.room-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* 渐变背景 */
  padding: 16rpx;
  gap: 12rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 页面装饰元素 - 与启动页一致的浮动光点动画 */
.room-page::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  animation: float 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 1;
}

.room-page::after {
  content: '';
  position: absolute;
  top: 20%;
  right: -20%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 80% 30%, rgba(255, 255, 255, 0.08) 0%, transparent 60%);
  animation: float 25s ease-in-out infinite reverse;
  pointer-events: none;
  z-index: 1;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  25% {
    transform: translateY(-20px) rotate(90deg);
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
  }
  75% {
    transform: translateY(-20px) rotate(270deg);
  }
}

