/* pages/room/index.wxss */

/* 房间页面主容器 */
.room-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx;
  gap: 20rpx;
}

/* 头部信息 */
.room-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.room-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}

.room-mode {
  color: #666666;
  font-size: 24rpx;
}

.close-btn {
  background: #FF6B6B;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 二维码区域 */
.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.qr-code {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.qr-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #F0F0F0;
}

.qr-tip {
  color: #666666;
  font-size: 24rpx;
}

.share-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

/* 玩家座位区域 */
.players-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.players-title {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  text-align: center;
}

.players-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 座位样式 */
.player-seat {
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  padding: 16rpx;
  transition: all 0.3s ease;
}

.player-seat:hover {
  border-color: #2196F3;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.2);
}

.player-seat.clickable {
  cursor: pointer;
}

.player-seat.clickable:active {
  transform: scale(0.98);
  background: #E3F2FD;
}

.seat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.seat-content.host-seat {
  background: #E3F2FD;
  border-radius: 8rpx;
  padding: 8rpx;
}

.seat-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #E9ECEF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.default-avatar {
  color: #666666;
  font-size: 24rpx;
  font-weight: 600;
}

.player-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.player-name {
  color: #333333;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

.host-badge {
  background: #FF6B6B;
  color: #FFFFFF;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.default-badge {
  background: #6C757D;
  color: #FFFFFF;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.edit-btn {
  background: #28A745;
  color: #FFFFFF;
  border: none;
  border-radius: 4rpx;
  padding: 4rpx 12rpx;
  font-size: 18rpx;
  margin-top: 8rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.start-btn {
  background: #28A745;
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.start-btn:disabled {
  background: #6C757D;
  box-shadow: none;
}

.start-btn:active:not(:disabled) {
  background: #218838;
  transform: scale(0.98);
}
