/* 座位样式 - 立体椅子 */
.player-seat {
  width: 40rpx;
  height: 30rpx;
  background: linear-gradient(145deg, #8B4513, #A0522D);
  border: 2rpx solid #654321;
  border-radius: 8rpx 8rpx 4rpx 4rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
  box-shadow: 
    0 3rpx 6rpx rgba(0, 0, 0, 0.3),
    0 1rpx 3rpx rgba(0, 0, 0, 0.2),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
  transform: perspective(100rpx);
  position: relative;
}

/* 椅子靠背 */
.player-seat::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 12rpx;
  background: linear-gradient(145deg, #8B4513, #A0522D);
  border: 2rpx solid #654321;
  border-radius: 4rpx 4rpx 0 0;
  box-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.1);
}

/* 椅子座位 */
.player-seat::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 36rpx;
  height: 6rpx;
  background: linear-gradient(145deg, #8B4513, #A0522D);
  border: 2rpx solid #654321;
