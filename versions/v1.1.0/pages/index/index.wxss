  position: absolute;
  left: 8rpx;
  top: 26rpx;
  width: 28rpx;
  background-color: white;
  z-index: 10; /* 提高层级，确保不被表头遮�?*/
  height: 56rpx; /* 调整高度：表�?4rpx + 红方16rpx + 蓝方16rpx = 56rpx */
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.fixed-team-cell {
  height: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 12rpx;
  background-color: #F8F8F8;
  border-bottom: 1rpx solid #E0E0E0;
  line-height: 16rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 固定队伍列中的红方文字为红色 */
.fixed-team-cell:nth-child(2) {
  color: #FF4444 !important;
}

/* 固定队伍列中的蓝方文字为蓝色 */
.fixed-team-cell:nth-child(3) {
  color: #4488FF !important;
}

.header-cell {
  background-color: #4CAF50 !important;
  color: white !important;
  font-weight: 500;
  height: 24rpx;
  line-height: 24rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scrollable-table-container {
  height: 56rpx; /* 调整高度：表�?4rpx + 红方16rpx + 蓝方16rpx = 56rpx */
  position: absolute;
  left: 36rpx;
  top: 26rpx;
  display: flex;
  flex-direction: column;
  width: calc(100% - 44rpx); /* 调整容器宽度�?00% - 28rpx(固定�? - 16rpx(边距) */
  min-width: 376rpx; /* 向左右各扩大8rpx�?60rpx + 16rpx = 376rpx */
  max-width: 476rpx; /* 向左右各扩大8rpx�?60rpx + 16rpx = 476rpx */
  background-color: white;
  border: none;
  box-shadow: none;
  box-sizing: border-box;
  margin: 0;
  padding: 0 0 2rpx 0; /* 添加底部内边距，为滚动条预留空间 */
  transform: none;
  /* 确保内容可以滚动，滚动条出现在底�?*/
  overflow-x: auto !important;
  overflow-y: hidden !important;
  -webkit-overflow-scrolling: touch;
  z-index: 5;
  /* 确保滚动条有适当间距 */
  border-bottom: none;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #E0E0E0;
  background-color: white !important;
  height: 16rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  width: 540rpx;
  min-width: 540rpx;
  max-width: 540rpx;
  margin: 0;
  padding: 0;
  align-items: stretch;
}

/* 最后一行（蓝方行）的底部边框，确保滚动条紧贴底�?*/
.table-row:last-child {
  border-bottom: 1rpx solid #E0E0E0;
}

.header-row {
  background-color: #4CAF50 !important;
  color: white !important;
  font-weight: 500;
  height: 24rpx;
  position: sticky;
  top: 0;
  z-index: 2;
  flex-shrink: 0;
  box-sizing: border-box;
  width: 540rpx;
  min-width: 540rpx;
  max-width: 540rpx;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: stretch;
}

/* 表头单元格样�?- 简约风�?*/
.header-row .table-cell {
  background-color: transparent !important;
  color: white !important;
  font-weight: 500;
  font-size: 12rpx;
  height: 16rpx;
  flex-shrink: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.table-cell {
  flex: 0 0 auto;
  padding: 2rpx;
  text-align: center;
  border-right: 1rpx solid #E0E0E0;
  font-size: 12rpx;
  font-weight: 500;
  width: 30rpx;
  background-color: white;
  overflow: visible;
  text-overflow: clip;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  height: 16rpx; /* 与表格行高度保持一�?*/
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  vertical-align: middle;
  background-color: white !important;
  border: none;
  box-shadow: none;
  box-sizing: border-box;
  flex-shrink: 0;
  margin: 0;
  line-height: 1.2;
}

/* 最后一列单元格移除右边�?*/
.table-cell:last-child {
  border-right: none;
  /* 确保最后一列紧贴右边缘 */
  margin-right: 0;
  padding-right: 0;
  /* 确保最后一列单元格与其他单元格对齐 */
  box-sizing: border-box;
}

.team-cell {
  background-color: #F8F8F8;
  font-weight: 500;
