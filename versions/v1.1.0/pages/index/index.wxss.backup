/* 重置样式 */
view, text, button, input, image, scroll-view, swiper, picker, radio, checkbox {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 页面容器 - 横屏模式优化 */
.container {
  background-color: #0B1557;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 10rpx;
  width: 100vw;
  box-sizing: border-box;
  overflow-y: auto;
  position: relative;
}

/* 环境标识 */
.env-badge {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 9999;
}

.env-text {
  font-size: 12rpx;
  padding: 2rpx 6rpx;
  border-radius: 15rpx;
  color: white;
  font-weight: bold;
  display: inline-block;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.env-text.trial {
  background-color: #ff9800;
  background-image: linear-gradient(135deg, #ff9800, #ff5722);
}

.env-text.develop {
  background-color: #9c27b0;
  background-image: linear-gradient(135deg, #9c27b0, #673ab7);
}

/* 把数显示 - 左侧体验版下方 */
.left-rounds-display {
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 9998;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 把数显示 - 横屏模式优化 */
.rounds-display {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -100rpx;
  padding: 0 15rpx;
  margin-left: 24.5rpx;
}

/* 页面标题 */
.title-section {
  text-align: center;
  margin: 0;
  padding: 0;
  position: relative;
  min-height: 0;
  height: auto;
}

/* 页面标题 - 简约风格 */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  font-family: 'Source Han Sans', 'Noto Sans CJK SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  text-shadow: none;
}

/* 标题图片 - 最小化处理 */
.title-image {
  width: 300rpx;
  height: 22rpx;
  max-height: 22rpx;
  display: inline-block;
  vertical-align: middle;
  line-height: 1;
}

/* 移除全屏宽度下划线以减少视觉分割 */
.title-section::after {
  display: none;
}

/* 主布局 - 横屏模式优化 */
.main-layout {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 -10rpx 0;
  width: 100%;
  gap: 120rpx;
  height: 150rpx;
  padding-left: 0;
  padding-right: 0;
}

/* 队伍样式 - 横屏模式优化 */
.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 18%;
  max-width: 240rpx;
  min-width: 180rpx;
  height: 150rpx;
}

/* 队伍内部布局 */
.team-layout {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

/* 红方队伍内部布局调整 */
.red-team .team-layout {
  justify-content: flex-start;
  padding-left: 30rpx;
}

/* 蓝方队伍内部布局调整 */
.blue-team .team-layout {
  justify-content: flex-end;
  padding-right: 30rpx;
}

/* 分数容器 - 用于包裹队伍标签和分数显示 */
.score-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 147rpx;
  padding: 10rpx 0;
}

/* 红方按钮在右侧 */
.left-buttons {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 10rpx;
}

/* 蓝方按钮在右侧 */
.right-buttons {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 10rpx;
  position: relative;
  left: 0rpx;
}

.team-label {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 0rpx;
}

.red-team .team-label {
  color: #e74c3c;
  margin-bottom: 3rpx;
}

.blue-team .team-label {
  color: #3498db;
  position: relative;
  top: -3rpx;
}

/* 等级显示 - 用于控制内部显示区域的高度 */
.level-display {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100%;
  margin-top: 5rpx;
}

/* 等级显示容器，确保内容居中显示 */
.level-display-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}

.score-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  z-index: 999;
}

/* 队伍按钮 - 简约风格 */
.team-buttons {
  position: relative;
  width: 200rpx;
  margin-top: 5rpx;
  height: 75rpx;
}

/* 红方按钮 - 向左移动9rpx */
.left-buttons {
  left: -9rpx;
}

/* 蓝方按钮 - 向右移动4rpx */
.right-buttons {
  left: 4rpx;
}

.team-btn {
  position: absolute;
  font-size: 12rpx !important;
  padding: 6rpx 8rpx !important;
  border-radius: 6rpx !important;
  font-weight: 500 !important;
  border: 1rpx solid #E0E0E0 !important;
  min-width: 0 !important;
  width: 50rpx !important;
  white-space: nowrap !important;
  text-align: center !important;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1) !important;
  transition: all 0.2s ease !important;
  height: 25rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  line-height: 1 !important;
  overflow: visible !important;
  margin: 0 !important;
}

.team-btn-double {
  background-color: #e74c3c !important;
  color: white !important;
  top: 0rpx !important;
  min-width: 0 !important;
  letter-spacing: 8rpx !important;
  text-align: center !important;
  padding-left: 8rpx !important;
}

.team-btn-two {
  background-color: #2196F3 !important;
  color: white !important;
  top: 37rpx !important;
}

.team-btn-one {
  background-color: #4CAF50 !important;
  color: white !important;
  top: 74rpx !important;
}

.team-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 把数显示 - 横屏模式优化 */
.rounds-display {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -100rpx;
  padding: 0 15rpx;
  margin-left: 24.5rpx;
}

.rounds-clock {
  width: 60rpx;
  height: 60rpx;
  border-radius: 0;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
  border: none;
}

.rounds-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.round-number-svg {
  width: 100%;
  height: 100%;
}

.rounds-text-large {
  font-family: 'Courier New', 'Monaco', 'Consolas', monospace;
  font-size: 32rpx;
  font-weight: bold;
  color: #00FF00;
  text-shadow: 0 0 8rpx #00FF00, 0 0 16rpx #00FF00;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 1;
  overflow: hidden;
  letter-spacing: 2rpx;
  background: linear-gradient(45deg, #001100, #003300);
  border-radius: 4rpx;
  border: 1rpx solid #00FF00;
}

.rounds-text-small {
  font-size: 16rpx;
  font-weight: 400;
  color: #666666;
  text-shadow: none;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
  overflow: hidden;
}

/* 右侧控制面板 */
.right-control-panel {
  position: fixed;
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  z-index: 100;
}

/* 适配小尺寸控制面板的内部元素样式 */
.right-control-panel .rule-section {
  padding: 8rpx 12rpx;
  width: 100%;
  min-width: 0;
  border-radius: 8rpx;
  margin: 6rpx 0;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.15);
  position: relative;
  left: 0rpx;
  font-family: 'Microsoft YaHei', '微软雅黑', 'Segoe UI', 'Noto Sans SC', Arial, sans-serif;
}

.right-control-panel .rule-section text {
  font-size: 14rpx;
}

.right-control-panel .radio-group {
  display: flex;
  flex-wrap: nowrap;
  margin: 3rpx 0;
  gap: 2rpx;
  align-items: center;
}

.right-control-panel .rule-section label {
  font-size: 10rpx;
  margin-right: 0;
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.right-control-panel .rule-section .picker {
  padding: 2rpx 4rpx;
  font-size: 10rpx;
  min-width: 30rpx;
  display: inline-block;
  text-align: center;
}

.right-control-panel .end-btn {
  font-size: 15rpx;
  margin: 4rpx 0;
  padding: 12rpx 0;
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.15);
  width: 80%;
  margin-left: 8rpx;
}

/* 规则选择 - 简约风格 */
  .rule-section {
    background-color: #F8F8F8;
    padding: 12rpx 16rpx;
    border-radius: 8rpx;
    margin: 15rpx 0;
    box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
    width: 100%;
    min-width: 0;
    font-family: 'Source Han Sans', 'Noto Sans CJK SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    border: 1rpx solid #E0E0E0;
  }

  .rule-section text {
    font-size: 20rpx;
    font-weight: 500;
    color: #333;
  }

  .rule-section radio-group {
    display: flex;
    flex-direction: column;
    margin: 10rpx 0;
    gap: 6rpx;
  }

  .rule-section label {
    display: flex;
    align-items: center;
    font-size: 16rpx;
    color: #333;
    margin-right: 0;
  }

  .rule-section .rounds-selector {
  display: inline-block;
  margin-left: 3rpx;
  vertical-align: middle;
}

  .rule-section .picker {
    padding: 6rpx 10rpx;
    border: 1rpx solid #E0E0E0;
    border-radius: 4rpx;
    font-size: 14rpx;
    color: #333;
    background-color: #ffffff;
  }

  .rounds-selector text {
    font-weight: 400;
    margin-right: 8rpx;
    font-size: 16rpx;
  }

  .picker {
    padding: 6rpx 10rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
    font-size: 14rpx;
    color: #333;
    border: 1rpx solid #E0E0E0;
  }

  /* 结束按钮 - 简约风格 */
  .end-btn {
    background-color: #4488FF;
    color: white;
    font-size: 18rpx;
    font-weight: 500;
    margin: 12rpx 0;
    padding: 12rpx 0;
    border-radius: 6rpx;
    width: 100%;
    align-self: stretch;
    box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
    border: 1rpx solid #4488FF;
  }

/* 比分历史表格样式优化 - 缩小文字和所占空间 */
.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 24rpx;
  position: relative; /* 确保标题和按钮不滚动 */
  z-index: 10; /* 确保标题和按钮在滚动层之上 */
  background-color: #FFFFFF;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-bottom: 4rpx;
  margin-left: 8rpx; /* 与固定队伍列（把数列）对齐 */
  width: calc(100% - 16rpx); /* 从把数列开始到表格结束的宽度 */
}

.history-actions {
  display: flex;
  align-items: center;
}

.restore-btn {
  display: none;
  align-items: center;
  background: none;
  border: none;
  padding: 1rpx 2rpx;
  margin-left: 2rpx;
}

.restore-text {
  font-size: 12rpx;
  color: #666;
}

.restore-btn:disabled .restore-text {
  color: #ccc;
}

.history-title {
  font-size: 12rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  flex: 1;
  background-color: #FFFFFF;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.undo-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
}

.undo-icon {
  width: 12rpx;
  height: 12rpx;
  margin-right: 1rpx;
}

.undo-text {
  font-size: 12rpx;
  color: #666;
}

.undo-btn:disabled .undo-icon {
  opacity: 0.4;
}

.undo-btn:disabled .undo-text {
  color: #ccc;
}

.history-table-section {
  border-radius: 16rpx; /* 增加圆角 */
  padding: 2rpx 4rpx 4rpx 4rpx;
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #ddd;
  background-color: #FFFFFF; /* 白色背景 */
  margin-top: 16rpx;
  margin-bottom: 0;
  margin-left: 160rpx;
  margin-right: 160rpx;
  position: relative;
  height: 102rpx; /* 调整高度以适应增加的标题行 */
  overflow: visible;
  display: flex;
  flex-direction: column;
  width: calc(100% - 320rpx);
  min-width: 360rpx;
  /* 限制显示12列，加上固定队伍列的宽度 */
  max-width: calc(360rpx + 36rpx);
  /* 确保表格区域不会超出指定宽度 */
  overflow: hidden;
  /* 确保表格区域完全填充父元素 */
  box-sizing: border-box;
  z-index: 4;
}

/* 固定队伍列 - 横屏模式优化 */
.fixed-team-column {
  position: absolute;
  left: 8rpx;
  top: 26rpx;
  width: 28rpx;
  background-color: white;
  z-index: 10; /* 提高层级，确保不被表头遮住 */
  height: 72rpx; /* 保持与表格容器高度一致：24rpx × 3行 */
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.fixed-team-cell {
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 12rpx;
  background-color: #F8F8F8;
  border-bottom: 1rpx solid #E0E0E0;
  line-height: 24rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 固定队伍列中的红方文字为红色 */
.fixed-team-cell:nth-child(2) {
  color: #FF4444 !important;
}

/* 固定队伍列中的蓝方文字为蓝色 */
.fixed-team-cell:nth-child(3) {
  color: #4488FF !important;
}

.header-cell {
  background-color: #4CAF50 !important;
  color: white !important;
  font-weight: 500;
  height: 24rpx;
  line-height: 24rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scrollable-table-container {
  height: 72rpx; /* 保持与固定队伍列高度一致：24rpx × 3行 */
  position: absolute;
  left: 36rpx;
  top: 26rpx;
  display: flex;
  flex-direction: column;
  width: 360rpx; /* 保持容器宽度为360rpx，允许滚动 */
  min-width: 360rpx; /* 保持容器最小宽度为360rpx */
  max-width: 360rpx; /* 保持容器最大宽度为360rpx */
  background-color: white;
  border: none;
  box-shadow: none;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  transform: none;
  /* 确保内容可以滚动 */
  overflow-x: auto !important;
  -webkit-overflow-scrolling: touch;
  z-index: 5;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #E0E0E0;
  background-color: white !important;
  height: 24rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  width: 540rpx;
  min-width: 540rpx;
  max-width: 540rpx;
  margin: 0;
  padding: 0;
  align-items: stretch;
}

.header-row {
  background-color: #4CAF50 !important;
  color: white !important;
  font-weight: 500;
  height: 24rpx;
  position: sticky;
  top: 0;
  z-index: 2;
  flex-shrink: 0;
  box-sizing: border-box;
  width: 540rpx;
  min-width: 540rpx;
  max-width: 540rpx;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: stretch;
}

/* 表头单元格样式 - 简约风格 */
.header-row .table-cell {
  background-color: transparent !important;
  color: white !important;
  font-weight: 500;
  font-size: 12rpx;
  height: 24rpx;
  flex-shrink: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
