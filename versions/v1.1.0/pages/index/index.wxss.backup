  padding: 0;
}

.red-score {
  color: #FF4444 !important;
  font-weight: 500;
  font-size: 12rpx;
  background-color: white !important;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.blue-score {
  color: #4488FF !important;
  font-weight: 500;
  font-size: 12rpx;
  background-color: white !important;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

