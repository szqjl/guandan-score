  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  position: fixed;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
  align-items: center;
}

/* 功能按钮基础样式 - 缩小版本，水平排列 */
.function-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 18rpx 12rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 20;
  height: 160rpx;
  width: 150rpx;
  align-self: stretch; /* 确保所有按钮高度一致 */
}

.function-btn::after {
  border: none;
}

/* 按钮图标 - 缩小版本 */
.btn-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

/* 按钮内容 - 垂直排列 */
.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.btn-title {
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 1.2;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.btn-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14rpx;
  font-weight: 400;
  line-height: 1.2;
  text-align: center;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

