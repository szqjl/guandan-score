.buttons-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: stretch; /* 确保所有子元素高度一致 */
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  z-index: 20;
  margin: 0 16rpx;
